{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Build configuration for CrossMilo.Contracts using build-arcane",

  "solution": "dotnet/framework/CrossMilo.Contracts.sln",

  "projects": [
    "dotnet/framework/src/CrossMilo.SourceGenerators.Proxy/CrossMilo.SourceGenerators.Proxy.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.Analytics/CrossMilo.Contracts.Analytics.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.Audio/CrossMilo.Contracts.Audio.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.Config/CrossMilo.Contracts.Config.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.Diagnostics/CrossMilo.Contracts.Diagnostics.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.ECS/CrossMilo.Contracts.ECS.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.FigmaSharp/CrossMilo.Contracts.FigmaSharp.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.Game/CrossMilo.Contracts.Game.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.Hosting/CrossMilo.Contracts.Hosting.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.Input/CrossMilo.Contracts.Input.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.Recorder/CrossMilo.Contracts.Recorder.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.Resilience/CrossMilo.Contracts.Resilience.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.Resource/CrossMilo.Contracts.Resource.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.Scene/CrossMilo.Contracts.Scene.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.Terminal/CrossMilo.Contracts.Terminal.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.UI/CrossMilo.Contracts.UI.csproj",
    "dotnet/framework/src/CrossMilo.Contracts.WebSocket/CrossMilo.Contracts.WebSocket.csproj"
  ],

  "tests": {
    "enabled": true,
    "filter": null,
    "coverage": false
  },

  "pack": {
    "enable": false,
    "versioning": "GitVersion"
  },
  "publish": {
    "artifacts": []
  },
  "report": {
    "coverage": false
  },
  "metrics": {
    "enabled": true,
    "exclude": [
      "obj",
      "bin",
      ".git",
      ".vs",
      ".idea",
      "packages"
    ],
    "thresholds": {
      "maxAverageComplexity": 50,
      "minCommentPercentage": 10
    }
  }
}
